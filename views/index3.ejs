      <fieldset>
        <h1>Cerificate Issued</h1>
        <h2><% if(hash !== null){ %><p><%= hash %></p><% } %></h2>
        <span id="myDiv"></span>
          <table class="table table-striped">
            <thead class="thead-dark">
              <tr>
                <th scope="col">#</th>
                <th scope="col">Parameter</th>
                <th scope="col">Value</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">1</th>
                <td>Name</td>
                <td><% if(name !== null){ %><p><%= name %></p><% } %></td>
              </tr>
              <tr>
                <th scope="row">2</th>
                <td>Enroll</td>
                <td><% if(enroll !== null){ %><p><%= enroll %></p><% } %></td>
              </tr>
              <tr>
                <th scope="row">3</th>
                <td>Degree No.</td>
                <td><% if(degree_no !== null){ %><p><%= degree_no %></p><% } %></td>
              </tr>
              <tr>
                <th scope="row">4</th>
                <td>Branch</td>
                <td><% if(branch !== null){ %><p><%= branch %></p><% } %></td>
              </tr>
              <tr>
                <th scope="row">5</th>
                 <td>CGPA</td>
                <td><% if(cgpa !== null){ %><p><%= cgpa %></p><% } %></td>
              </tr>
              <tr>
                <th scope="row">6</th>
                <td>Email</td>
                <td><% if(email !== null){ %><p><%= email %></p><% } %></td>
              </tr>
              <tr>
                <th scope="row">7</th>
                <td>Issuer</td>
                <td><% if(issuer !== null){ %><p><%= issuer %></p><% } %></td>
              </tr>
              <tr>
                <th scope="row">8</th>
                <td>Pass Out</td>
                <td><% if(datetime !== null){ %><p><%= datetime %></p><% } %></td>
              </tr>
              <tr>
                <th scope="row">9</th>
                <td>Previous Hash</td>
                <td><% if(prehash !== null){ %><p><%= prehash %></p><% } %></td>
              </tr>
              <tr>
                <th scope="row">10</th>
                <td>Time Stamp</td>
                <td><% if(timestamp !== null){ %><p><%= timestamp %></p><% } %></td>
              </tr>
              <tr>
                <th scope="row">11</th>
                <td>Hash</td>
                <td><% if(hash !== null){ %><p><%= hash %></p><% } %></td>
              </tr>
            </tbody>
          </table>

          <% if(error !== null){ %>
            <p><%= error %></p>
          <% } %>
          <script type="text/javascript">
            // console.log(block);
          </script>

        <form id="myForm" enctype='application/json'>
          <button type="button" onclick="window.location.href='/'" class="btn btn-primary" onclick="submitform()">Return to Issuer Page</button>
            <button type="button" onclick="window.location.href='/blocks'" class="btn btn-primary" onclick="submitform()">Blocks</button>
            <button type="button" onclick="window.location.href='/peers'"class="btn btn-primary" onclick="submitform()">Peers</button>
          </form>
      </fieldset>
</body>
<script src="https://cdn.rawgit.com/ethereum/web3.js/develop/dist/web3.js"></script>
<script src="https://code.jquery.com/jquery-3.1.1.slim.min.js"></script>
</html>
